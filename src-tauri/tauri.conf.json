{
  "productName": "ffoptimizer",
  "version": "0.0.0",
  "identifier": "com.ialdamav.ffoptimizer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "ffoptimizer",
        "width": 1400,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["*"],
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["src/binaries/*"]
  }
}
